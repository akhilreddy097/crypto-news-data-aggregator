# Cryptocurrency APIs
COINGECKO_API_KEY=your_coingecko_api_key
CCXT_EXCHANGE=binance
CCXT_API_KEY=your_exchange_api_key
CCXT_SECRET=your_exchange_secret

# News APIs
NEWS_API_KEY=your_newsapi_key
TAGGED_FEED_URL=https://feeds.bloomberg.com/crypto

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_news_db
MONGO_URI=mongodb://localhost:27017/crypto_news
DB_TYPE=postgresql

# Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here
SERVER_PORT=5000
SERVER_HOST=0.0.0.0

# Data Collection
UPDATE_INTERVAL=300
MAX_RETRIES=3
RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_CRYPTO_SCRAPING=True
ENABLE_NEWS_SCRAPING=True
ENABLE_VISUALIZATION=True
ENABLE_ALERTS=False
